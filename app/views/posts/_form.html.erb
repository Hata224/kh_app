<%= form_for post, local: true do |f| %>

  <div class="form-group">
    <%= f.label :title, "タイトル（50字以内）" %>
    <%= f.text_field :title, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :title, "依頼の詳細（1000字以内）" %>
    <%= f.text_area :body, rows: 8, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :tag_list, "タグ（カンマ区切り）" %>
    <%= f.text_field :tag_list, value: @post.tag_list.join(','), class: "form-control" %>
  </div>

  <div class="form-group">
    <i class="fas fa-camera"></i><%= f.label :title, "画像", class: "post-image-title" %><br>
    <%= f.attachment_field :image %>
    <img id="preview" style="width:25%;">

<script>
  $('#post_image').on('change', function (e) {
    var reader = new FileReader();
    reader.onload = function (e) {
        $("#preview").attr('src', e.target.result);
    }
    reader.readAsDataURL(e.target.files[0]);
});
</script>
  </div>

  <%= f.submit '投稿する', class: "btn btn-primary btn-block" %>
<% end %>
