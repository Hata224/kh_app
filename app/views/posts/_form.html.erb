<%= form_for post do |f|%>
<div class="form-group">
<%= f.label :title, "依頼タイトル" %>
<%= f.text_field :title, autofocus: true, class: "form-control" %>
</div>
<div class="form-group">
<%= f.label :title, "依頼の詳細" %>
<%= f.text_area :body, rows: 8, autofocus: true, class: "form-control" %>
</div>
<div class="form-group">
<i class="fas fa-camera"></i><%= f.label :title, "画像の挿入", class: "post-image-title" %><br>
<%= f.attachment_field :image, class: "post-image" %>
</div>
<%= f.submit '投稿する', class: "btn btn-primary btn-block" %>
<% end %>
