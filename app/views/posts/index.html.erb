<div class="container">
<div class="row">
<div class="posts-index">
  <% @posts.each do |post| %>
    <%= link_to post do %>
    <div class="col-lg-3 post-item post-list">
    <% if post.user.avatar_id.present? %>
    <%= image_tag attachment_url(@user, :avatar, :fill, 50, 50, format: "jpg"), class: 'user-img' %>
    <% else %>
   <%= image_tag('/images/default.jpeg', size: '50x50', class: 'user-img') %>
    <% end %>
    <div class="post-body">
    <div class="post-title">
      <%= post.title %>
      </div>
       <% end %>
      <div class="post-menu">
        <%= link_to @user.username, user_path(@user.id), class:'post-user' %>
        <%= post.created_at.strftime("%Y年%m月%d日") %>
        </div>
        </div>
    </div>

  <% end %>
  <%= paginate @posts %>
  </div>
  </div>
</div>
