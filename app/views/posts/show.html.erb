<div class="container">
<div class="col-md-12">
<h2><%= link_to @user.username, user_path %></h2>
<h1><%= @post.title %></h1>
<p><%= simple_format @post.body %></p>
<p class="text-right">
<%= @post.created_at.strftime("%Y年%m月%d日") %>
</p>
</div>
<% if @post.user_id == current_user.id %>
<%= link_to '投稿を編集', edit_post_path(@post), class: "btn btn-success btn-md" %>
<%= link_to '投稿を削除', post_path(@post.id), method: :delete, data: { confirm: "投稿を削除しますか？この操作は取り消せません。"}, class: "btn btn-danger btn-md" %>
<% end %>
</div>
