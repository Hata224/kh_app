<div class="container">
<div class="col-md-12">
<h1><%= @post.title %></h1>
<p><%= simple_format @post.body %></p>
<p class="text-right">
<%= @post.created_at.strftime("%Y年%m月%d日") %>
</p>
</div>
<%= link_to '投稿を編集', edit_post_path(@post), class: "btn btn-success btn-md" %>
<%= link_to '投稿を削除', post_path(@post), method: :delete, class: "btn btn-danger btn-md" %>
</div>
