<div class="posts-index">
 <div class="container">
  <div class="post-item-box">
<% if current_user.avatar_id.present? %>
<div class="user-photo">
  <%= image_tag attachment_url(current_user, :avatar, :fill, 200, 200, format: "jpg"), class: 'user-image' %>
  </div>
<% end %>
<div class="username-show">
<h1><%= current_user.username %></h1>
<%= link_to 'ユーザー情報編集', edit_user_registration_path, class: "btn btn-info btn-md" %>
</div>

<div class="profile-show">
<%= current_user.profile %>
</div>

<div class="user-nav col-md-12">
<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item nav-link-user">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">投稿一覧</a>
  </li>
  <li class="nav-item nav-link-user">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">いいね一覧</a>
  </li>
  <li class="nav-item nav-link-user">
    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">フォロー</a>
  </li>
  <li class="nav-item nav-link-user">
    <a class="nav-link" id="follower-tab" data-toggle="tab" href="#follower" role="tab" aria-controls="follower" aria-selected="false">フォロワー</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab"><% current_user.posts.each do |post| %>
  <%= link_to post do %>
    <div class="col-md-12">
      <ul>
        <li>タイトル：<%= post.title %></li>
        <li>投稿日：<%= post.created_at.strftime("%Y年%m月%d日") %></li>
      </ul>
    </div>
  <% end %>
<% end %>
</div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
  <% current_user.favorites.each do |favorite| %>
   <% post = Post.find_by(id: favorite.post_id) %>
  <%= link_to post do %>
    <div class="col-md-12">
      <ul>
        <li>タイトル：<%= post.title %></li>
        <li>投稿日：<%= post.created_at.strftime("%Y年%m月%d日") %></li>
      </ul>
    </div>
  <% end %>
<% end %>
</div>
  <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab"><% current_user.followings.each do |user| %>
<table>
<tr>
  <td>  <%= user.username %> </td>
  <td><%= link_to '詳細', user_path(user) %></td>
</tr>
</table>
<% end %>
  </div>
   <div class="tab-pane fade" id="follower" role="tabpanel" aria-labelledby="follower-tab"><% current_user.followers.each do |user| %>
<table>
<tr>
  <td>  <%= user.username %> </td>
  <td><%= link_to '詳細', user_path(user) %></td>
</tr>
</table>
<% end %>
</div>
</div>
</div>
</div>
</div>
</div>
</div>
